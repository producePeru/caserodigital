<div class="wd_category_feature bottom-to-top hb-animate-element" id="wd_category_feature">
    <div class="container">
      <div class="row">
			<div class="wdfcat-items">
				<div class="list_carousel row responsive clearfix">
					<div class="product-list category_list_carousel" id="wd_cat_featured">
						{% for category in categories %}
						{% if loop.index % 1 == 1 %}
						<li class="double-slideitem slider-item">
							<ul>
							{% endif %}
						<div class="item">
							<div class="content">
								<div class="wd_cat_content">
									<div class="cat-img">
										<a href="{{ category.href }}">
											<img src="{{ category.thumb }}" alt="{{ category.name }}" title="{{ category.name }}" class="cat_image1">
										</a>
									</div> 
									<div class="wdcat-content">
										<div class="wdcat-inner">
											<div class="cat-infor">
												<h4 class="title"><a href="{{ category.href }}" class="btn-pattern">{{ category.name }}</a></h4>
											</div>

											{% if category.children %}
												<ul>
												{% for child in category.children|slice(0, 4) %}
												<li>
													<span class="category-name"><a href="{{ child.href }}" class="list-group-item">{{ child.name }}</a></span>
												</li>
												{% endfor %}

											{% if category.children >= 4 %}
											<li class="cat-more">
											<a href="{{ category.href }}" class="category-viewall">Shop Now</a>
											</li>
											{% endif %}
											</ul>
												{% endif %}
										</div> 
									</div>
								</div><!-- Caption END -->
							</div>
						</div>
						{% if loop.index % 1 != 1 %}
						</ul>
					</li>
				{% endif %}
						{% endfor %}
					</div>
				</div>
			</div>
			</div>
			</div>
</div>