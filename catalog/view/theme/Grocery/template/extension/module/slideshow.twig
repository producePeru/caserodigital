<div class="top-slider">
<div class="main-slider">
<div id="spinner"></div>
<div class="swiper-viewport">
  <div id="slideshow{{ module }}" class="swiper-container" style="opacity: 1;">
    <div class="swiper-wrapper"> 
      {% for banner in banners %}
        <div class="swiper-slide text-center">
          {% if banner.link %}
          <a href="{{ banner.link }}">
            <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
          </a>
          {% else %}
          <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" />
          {% endif %}
          {# <div class="slide-description">#}
            
              <div class="slider-content">
               <div class="main-carousel-content">
                <div class="slider-details">{{banner.title1}}</div>
                <div class="slider-title">{{banner.title}}</div>
                <div class="slider-description">{{banner.description}}</div>
                <div class="slider-buttons">
                  <div class="slider-button"> <a class="btn-primary" href="{{ banner.link }}">{{banner.button}}</a></div>
                </div>
              </div>
            </div>
          </div> 
       {#  </div>#}
      {% endfor %}
      
       </div>
  </div>

  <div class="swiper-pagination slideshow{{ module }}"></div>
  <div class="swiper-pager">
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>
</div>
</div>
<script>
$(window).load(function() {		
$('#slideshow0').swiper({
	mode: 'horizontal',
	slidesPerView: 3,
	pagination: false,//'.slideshow0',
  autoplay:true,
	paginationClickable: true,
	nextButton: '.swiper-button-next',
  prevButton: '.swiper-button-prev',
  spaceBetween: 30,
	autoplay: 5500,
  autoplayDisableOnInteraction: true,
	loop: true,
  effect:'slide',

   breakpoints: {
    991: {
      slidesPerView: 2,
      spaceBetween:15
    },
    479: {
      slidesPerView: 1,
      spaceBetween: 10
    }
    }
});
	});
</script>
<script>
	// Can also be used with $(document).ready()
	$(window).load(function() {		
	  $("#spinner").fadeOut("slow");
	});	
</script>